<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroSlider"
    android:padding="10dp">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/slider"
        android:layout_height="match_parent"
        android:layout_above="@id/bottmLayout">

    </androidx.viewpager.widget.ViewPager>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_alignParentBottom="true"
    android:id="@+id/bottmLayout">
<Button
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:text="@string/get_start"
    android:onClick="getStart"
    android:background="@color/lightblue"
    android:textColor="@color/white"
    android:padding="10dp"
    android:id="@+id/get_start_btn"
    android:layout_centerHorizontal="true"
    android:textSize="18sp"
    android:textAllCaps="false"
    android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dots"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"/>
<Button
    android:id="@+id/next_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:onClick="next"
    android:text="@string/Next_btn"
    android:background="#00000000"
    android:drawableRight="@drawable/next_btn_icon"
    android:paddingBottom="30dp"/>

</RelativeLayout>
</RelativeLayout>