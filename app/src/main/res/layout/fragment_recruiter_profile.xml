<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".recruiter.recruiterfragments.RecruiterProfile">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/lightblue"
                android:orientation="vertical"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="80dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/lightblue"
                android:id="@+id/update_recruiter_profileimg"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="@color/lightblue"
                android:id="@+id/recruiter_profileName"
                android:layout_below="@id/update_recruiter_profileimg"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:padding="15dp"
                android:textSize="26sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/recruiter_profileName"
                android:orientation="vertical">
                <!--1st Cardview Personal details  -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="4dp"
                    android:layout_marginTop="10dp"
                    >
                    <!--Cardview matchParent linear layout  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--Header linear layout  -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Personal details"
                                android:padding="12dp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textSize="17sp"/>

                        </LinearLayout>
                        <!--details 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Not Mentioned"
                                android:id="@+id/show_email"
                                android:padding="10dp"
                                android:layout_weight="1.5"
                                />
                        </LinearLayout>
                        <!--details 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Mobile No."
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Not Mentioned"
                                android:id="@+id/show_phoneNo"
                                android:layout_weight="1.5"
                                android:padding="10dp"/>
                        </LinearLayout>
                        <!--details 3 -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Current location"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Not Mentioned"
                                android:layout_weight="1.5"
                                android:id="@+id/show_address"
                                android:padding="10dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--2nd Cardview Personal details  -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="10dp"
                    app:cardElevation="4dp"
                    >
                    <!--Cardview matchParent linear layout  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--Header linear layout  -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Work Summary"
                                android:padding="12dp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textSize="17sp"/>

                        </LinearLayout>
                        <!--details 1  -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Profile title"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Not Mentioned"
                                android:id="@+id/show_profileTitle"
                                android:layout_weight="1.5"
                                android:padding="10dp"/>
                        </LinearLayout>
                        <!--details 2  -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Company name"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Not Mentioned"
                                android:id="@+id/show_company"
                                android:layout_weight="1.5"
                                android:padding="10dp"/>
                        </LinearLayout>
                        <!--details 3  -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Functional area"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Not Mentioned"
                                android:id="@+id/show_functionalArea"
                                android:layout_weight="1.5"
                                android:padding="10dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:tooltipText="Edit Profile"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_edit_white_24dp"
        />
</FrameLayout>