<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageblue"
        android:background="@drawable/blueimage"/>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="185dp"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/boxig"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="42dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/discriptiontxt"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Custom_name"
        android:hint="Email"
        android:layout_above="@id/reset_btn"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="10dp"
        android:layout_marginBottom="30dp"
        android:inputType="textEmailAddress"
        android:id="@+id/forgotemailid"/>
    <Button
        style="@style/custome_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:background="@drawable/buttonshape1"
        android:id="@+id/reset_btn"
        android:padding="12dp"
        android:fontFamily="@font/doppio_one"
        android:text="reset password"
        />
    </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:clickable="true"
        android:id="@+id/imageBackbtn"
        android:background="@color/lightblue"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forgot password"
        android:fontFamily="@font/doppio_one"
        android:textColor="@color/lightblue"
        android:id="@+id/forgotpwdtxt"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageblue"
        android:textSize="28sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="we just need your registered email id to send your password reset instruction"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:fontFamily="@font/doppio_one"
        android:textColor="@color/lightblue"
        android:id="@+id/discriptiontxt"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/forgotpwdtxt"
        android:textSize="15sp"/>

</RelativeLayout>